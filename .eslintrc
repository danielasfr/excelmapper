{
    "rules": {
        "indent": [
            2,
            2
        ],
        "quotes": [
            2,
            "double"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "curly" : 2,
        "camelcase": 0,
        "semi-spacing": 0,
        "no-lonely-if": 2,
        "space-unary-ops" : 0,
        "dot-notation": 0,
        "no-extra-semi": 2,
        "eol-last": 2,
        "key-spacing": 0,
        "no-multi-spaces": 0
    },
    "env": {
        "browser": true,
        "node": true
    }
}
